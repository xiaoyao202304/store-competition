<h2>Edit Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <!-- 显示商品当前图片 -->
  <div class="group">
    <% if @product.photos.present? %>
      <span>当前商品图</span><br>
      <% @product.photos.each do |p| %>
        <%= image_tag p.avatar.thumb.url %>
      <% end %>
    <% end %>
  </div>

  <!-- 上传商品图片 -->
  <div class="group">
    <%= f.label '上传商品图片(可传多张)' %><br>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  </div>

  <div class="group">
    <%= f.input :category, :as => :radio_buttons, :collection => Product::CATEGORY, :item_wrapper_class => 'inline' %>
  </div>


  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
