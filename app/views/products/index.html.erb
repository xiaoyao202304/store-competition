<br><br>




<div class="content-section-a">
   <div class="container">
     <div class="row">
       <div class="col-lg-5 col-sm-6">

         <div class="clearfix"></div>
         <br><br><br><br>
         <h2 class="section-heading">Women's Like</h2>
         <hr class="section-heading-spacer">

       </div>
       <div class="col-lg-5 col-lg-offset-2 col-sm-6">
         <%= image_tag 'pic-1.jpg', class: 'img-responsive' %>
       </div>
     </div>
   </div>
 </div>

 <div class="content-section-b">
   <div class="container">
     <div class="row">
       <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">

         <div class="clearfix"></div>

         <h2 class="section-heading">Best Sellers</h2>
         <hr class="section-heading-spacer">
       </div>

     </div>



    <% @products.each do |product| %>
    <div class="col-xs-1 col-md-4">

      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail1") %>
        <% else %>
          <%= image_tag("http://placehold.it/500x500&text=No Pic", class: "thumbnail1") %>
        <% end %>
      <% end %>

      <div class="product-details">

          <a href="#" class="clearfix product__link">
              <h4 class="product__name">
                <%= product.title %>
              </h4>
          </a>

            <span class="product__price">
              $<%= product.price %>
            </span>

              <h4 class="product__label">  </h4>
                  <span class="product__color">
                    Color
                  </span>

              <div class="product__additional-colors">
                  <a href="#" class="product__link"> </a>
              </div>
      </div>
    </div>
  <% end %>
</div>
</div>
</div>
